<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.TranslucentStatus" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="EditText">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:background">@drawable/edit_text_bg</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline.App" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/bluish_black</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline.App.UserAgreement" parent="TextAppearance.AppCompat.Headline.App">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearance.AppCompat.Headline.App.White" parent="TextAppearance.AppCompat.Headline.App">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="AppTheme.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mid_grey_1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.Design.BottomNavigationView.App" parent="Widget.Design.BottomNavigationView">

    </style>

</resources>
