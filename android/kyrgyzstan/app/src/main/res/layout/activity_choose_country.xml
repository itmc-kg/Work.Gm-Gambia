<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.country.ChooseCountryActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/choose_country_text"
        android:textColor="@color/bluish_black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginEnd="16dp"
        android:id="@+id/kg_content"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/flag_kg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_kg_flag"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/kg"
            android:layout_marginStart="19dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:text="Кыргызтан"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/bluish_black"
            app:layout_constraintStart_toEndOf="@id/flag_kg"
            app:layout_constraintBottom_toTopOf="@id/lang_ru"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/kg"
            android:id="@+id/lang_ru"
            android:visibility="gone"
            android:textColor="#25324C"
            android:text="Русский"
            android:layout_width="0dp"
            android:layout_marginStart="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/flag_kg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/kg_check"
            android:layout_width="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_height="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="29dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginEnd="16dp"
        android:id="@+id/gm_content"
        app:layout_constraintTop_toBottomOf="@id/kg_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/flag_gm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_gambia"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/gm"
            android:layout_marginStart="19dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:text="Gambia"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/bluish_black"
            app:layout_constraintStart_toEndOf="@id/flag_gm"
            app:layout_constraintBottom_toTopOf="@id/lang_gm"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/gm"
            android:id="@+id/lang_gm"
            android:textColor="#25324C"
            android:text="English"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_marginStart="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/flag_gm"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/gm_check"
            android:layout_width="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_height="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


