<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.country.ChooseCountryActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/choose_language_text"
        android:textColor="@color/bluish_black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginEnd="16dp"
        android:id="@+id/ru_content"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/flag_ru"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_rus_flag"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_marginStart="19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:text="Русский"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/bluish_black"
            app:layout_constraintStart_toEndOf="@id/flag_ru"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/ru_check"
            android:layout_width="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_height="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:id="@+id/kg_content"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/ru_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/flag_kg"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_kg_flag"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_marginStart="19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:text="Кыргызча"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/bluish_black"
            app:layout_constraintStart_toEndOf="@id/flag_kg"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/kg_check"
            android:layout_width="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_height="24dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginTop="22dp"
        android:id="@+id/eng_content"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/kg_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/flag_eng"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_eng_flag"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_marginStart="19dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:text="English"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/bluish_black"
            app:layout_constraintStart_toEndOf="@id/flag_eng"
            android:layout_height="wrap_content"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/eng_check"
            android:layout_width="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_done_black_24dp"
            android:layout_height="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


